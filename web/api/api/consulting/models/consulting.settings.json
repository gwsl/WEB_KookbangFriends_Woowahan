{
  "kind": "collectionType",
  "collectionName": "consultings",
  "info": {
    "name": "consulting"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true
    },
    "consulting_comment": {
      "model": "consulting-comment",
      "via": "consultings"
    },
    "recipient": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "consultings_rec"
    },
    "professional": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "consultings_pro"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "accepting",
        "confirmed",
        "progressing",
        "solved"
      ],
      "default": "accepting",
      "required": true
    }
  }
}
