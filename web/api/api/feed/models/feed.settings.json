{
  "kind": "collectionType",
  "collectionName": "feeds",
  "info": {
    "name": "Feed"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "user": {
      "via": "feeds",
      "plugin": "users-permissions",
      "model": "user"
    },
    "date": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true
    },
    "paragraph": {
      "type": "string",
      "required": true
    },
    "thumbnail": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "support_comments": {
      "via": "support",
      "collection": "support-comment"
    }
  }
}
